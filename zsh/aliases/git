alias gba='git branch -a'
alias gc='git commit -v'
alias gca='gc -a'
alias gd='git diff'
alias gdf='gd --name-only | uniq'
alias gg='git lg'
alias gl='git pull -v'
alias gp='git push -uv'
alias gpf='gp --force-with-lease'
alias gps='gp -o ci.skip'
alias gpfs='gpf -o ci.skip'
alias gr='git rebase'
alias gri='gr -i'
alias gra='gr --abort'
alias grc='gr --continue'
alias gst='git status -s'
alias open_change_files="gdf | xargs $EDITOR" # Opens all files with git changes
alias show_changed_files="gdf | xargs $EDITOR" # Opens all files with git changes
