#!/bin/sh

function code_clean {
  code --disable-extensions --new-window $@
}

function code_project {
  echo $1
  project_dir=$(find $DEVEL_DIR -maxdepth 1 -type d -name $1 -print)
  workspace_file=$DOT_DIR/vscode/workspaces/$1.code-workspace

  $project_dir || return
  $workspace_file || return

  echo $workspace_file

  cd $project_dir
  code $workspace_file --new-window
}

alias c=code
alias cc=code_clean
alias project=code_project
alias p=code_project
