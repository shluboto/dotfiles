# Git configuration change functions, when in repository directory:
neogit() {
  git config user.name $NAME
  git config user.email $NEO_EMAIL
  echo -n "Name: "
  git config user.name
  echo -n "E-Mail: "
  git config user.email
}

pgit() {
  git config user.name $GITHUB_NAME
  git config user.email $GITHUB_EMAIL
  echo -n "Name: "
  git config user.name
  echo -n "E-Mail: "
  git config user.email
}
